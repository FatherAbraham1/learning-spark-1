        violationEntries
          .filter(_.ticket.fine > 1000.00)
          .map(_.ticket.description)
          .distinct
          .collect

      println("Big ticket items:")
      for( (desc, fine) <- bigTicketItems) {
        println(s" $fine  $desc")
      }


